{
  "manifest_version": 2,
  "name": "Domain Todo",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": {
      "38": "icon_38x38.png"
    },
    "default_title": "Todo List",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ]
}